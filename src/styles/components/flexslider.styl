.flex-container a:active,
.flexslider a:active,
.flex-container a:focus,
.flexslider a:focus
  outline none

.slides,
.flex-control-nav,
.flex-direction-nav
  margin 0
  padding 0
  list-style none

.flexslider
  padding 0
  margin: 0
  position relative
  .slides
    & > li
      display none
      backface-visibility hidden
    img
      width 100%
      display block
  &:hover
    .flex-prev
      opacity 0.7
      left 10px
    .flex-next
      opacity 0.7
      right 10px

.flex-pauseplay
  span
    text-transform capitalize
  a
    display block
    width 20px
    height 20px
    position absolute
    bottom 5px
    left 10px
    opacity 0.8
    z-index 10
    overflow hidden
    cursor pointer
    color #000

.slides
  &:after
    display block
    clear both
    visibility hidden
    line-height 0
    height 0

html[xmlns]
  .slides
    display block

*
  html
    .slides
      height 1%

.no-js
  .slides
    & > li
      &:first-child
        display block

.flex-viewport
  max-height 2000px
  transition all 1s ease
  margin: 20px

.loading
  .flex-viewport
    max-height 300px

.carousel
  li
    margin-right 5px

.flex-direction-nav

  a
    display block
    position absolute
    top 50%
    margin-top: -30px
    z-index 10
    cursor pointer
    text-decoration none
    transition all .3s ease

  .flex-prev
    left: 10px
    sprite $carousel-prev-dark

  .flex-next
    right: 10px
    sprite $carousel-next-dark


.flexslider:hover .flex-next:hover, .flexslider:hover .flex-prev:hover
  opacity 1

.flex-control-nav
  width 100%
  position absolute
  bottom -40px
  text-align center
  li
    margin 0 6px
    display inline-block
    zoom 1
    *display inline

.flex-control-paging
  li
    a
      width 11px
      height 11px
      display block
      background #666
      background rgba(0,0,0,0.5)
      cursor pointer
      text-indent -9999px
      border-radius 20px
      box-shadow inset 0 0 3px rgba(0,0,0,0.3)
      &:hover
        background #333
        background rgba(0,0,0,0.7)
      &.flex-active
        background #000
        background rgba(0,0,0,0.9)
        cursor default

.flex-control-thumbs
  margin 5px 0 0
  position static
  overflow hidden
  li
    width 25%
    float left
    margin 0
  img
    width 100%
    display block
    opacity .7
    cursor pointer
    &:hover
      opacity 1
  .flex-active
    opacity 1
    cursor default

