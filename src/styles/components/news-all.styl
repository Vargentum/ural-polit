/*------------------------------------*\
  NEWS SECTION: header section 2 (banners)
\*------------------------------------*/
.news-section
  position relative

  ul
    reset-list()

  .btn-serv-wrap
    margin-bottom: 20px
    padding: 0 10px



  /*------------------------------------*\
    TYPE: header section 1
  \*------------------------------------*/
  &.type-header-section-1
    make-row()
    @extend .hidden-xs
    margin-top: 20px
    margin-bottom: 20px

    li
      make-sm-column(3.33)
      make-md-column(2)

      +b($media-tablet)
        hide-except(1..3)


  /*------------------------------------*\
    NEWS SECTION TYPE: header section 2 (banners)
  \*------------------------------------*/
  &.type-header-section-2
    make-row()
    @extend .hidden-sm
    @extend .hidden-xs
    margin-bottom: 15px

    li
      make-xs-column(3.33)

    .news-article
      position relative
      height: 100px
      padding: 10px


      .flexbox &
        display flex
        flex-direction column
        justify-content flex-end

    .news-article__title
      font-size: 14px
      font-weight: 700
      color: $body-bg;
      position relative
      margin: 0

    .news-article__photo
      absolute left top
      size 100%





  /*------------------------------------*\
    NEWS SECTION TYPE: Important
  \*------------------------------------*/
  &.type-important
    @extend .l-island
    margin-left: 0
    margin-right: 0
    padding: 0
    border-left: none
    border-right none

    .news-section__title
      padding-top: 20px
      padding-bottom: 20px

    ul
      make-row()
      margin-bottom: 20px

    li
      make-xs-column(5)
      make-sm-column(3.33)
      make-md-column(2)

      +b($media-tablet)
        hide-except(1..3)

      +b($media-max-phone)
        hide-except(1..2)


    time
      display block
      margin: 5px 0

    .news-article__title
      font-size: 14px
      margin: 5px 0

    .news-article__theme
      font-size: 12px
      color $gray-light
      text-transform: uppercase;
      margin: 5px 0

    .news-article__body
      font-size: 12px

    .bnr-wrap
      hLine()
      text-align: center;
      margin: 20px 0

    .news-section__footer
      make-row()
      margin: 20px 0

      .btn
        font-size: 12px
        border $gray-light
        font-weight: 400
        text-transform: uppercase
        padding: 6px
        make-xs-column(8)
        make-sm-column(6)
        make-md-column(4)
        center-block()


  /*------------------------------------*\
    NEWS SECTION TYPE: person
  \*------------------------------------*/
  &.type-persons
    text-align: center;

    .news-article
      padding: 10px 0

      &,&:hover,&:focus
        border-top-color: $gray-lighter

      &>*
        display block
        margin: 5px auto

    .news-article__photo
      border-radius: 50%
      size 110px

    .news-article__title
      font-size: 13px
      font-weight: 700

    .news-article__body
      font-size: 12px


    +b($media-max-phone)

      ul
        make-row()

      li
        make-xs-column(5)

  /*------------------------------------*\
    NEWS SECTION TYPE: project
  \*------------------------------------*/
  &.type-projects
    text-align: center;
    @extend .hidden-xs

    .news-article
      padding: 10px 0

      &,&:hover,&:focus
        border-top-color: $gray-lighter

      &>*
        display block
        margin: 10px auto

    .news-article__photo
      border-radius: 50%
      size 135px

    .news-article__title
      font-size: 15px
      font-weight: 700

    .news-article__body
      font-size: 13px

    +b($media-max-phone)

      ul
        make-row()

      li
        make-xs-column(5)


  /*------------------------------------*\
    NEWS SECTION TYPE: news from partners
  \*------------------------------------*/
  &.type-from-partner
    make-md-column(10)
    @extend .hidden-xs
    border-top: 1px solid $gray-lighter
    margin: 20px 0
    padding: 15px 0

    ul
      make-row()

    li
      make-sm-column(3.33)
      make-md-column(3.33)


    .news-article
      margin: 20px 0
      padding: 10px

    .news-article__photo
      float left
      size 70px
      margin-right: 5px

    .news-article__title
      font-size: 13px
      margin: 0 0 5px

    .news-article__body
      font-size: 13px



/*------------------------------------*\
  NEWS SECTION components
\*------------------------------------*/
.news-section__title
  margin: 0
  font-size: 18px
  font-weight: 700
  color: $brand-primary;
  padding: 15px 10px
  
  &.type-non-accented
    color: $text-color;
    font-size: 14px
    padding-top: 19px













/*------------------------------------*\
  NEWS ARTICLE
\*------------------------------------*/
.news-article
  @extend .link-emulate-article
  @extend .article-with-hover
  color $text-color
  clearfix()
  padding: 5px 10px

  time
    color: $brand-info;
    font-size: 0.75em
    font-family: $font-family-secondary;

  .attention-label
    font-family: $font-family-secondary;
    color: $brand-primary;



  /*------------------------------------*\
    NEWS ARTICLE TYPE: preview Short
  \*------------------------------------*/
  &.type-preview-S
    @extend .arrow-after
    font-weight: 700


  /*------------------------------------*\
    NEWS ARTICLE TYPE: preview Middle
  \*------------------------------------*/
  &.type-preview-M
    padding-top: 15px
    padding-bottom: 15px
    position relative
    font-size: 15px

    &,&:hover,&:focus
      border-top-color: $gray-lighter

    .news-article__photo
      size 80px 60px
      margin-right: 15px
      margin-bottom: 3px
      float left

    .news-article__title
      font-size: 15px
      margin: 0 0 5px

    .news-article__body
      font-size: 14px

    aside
      margin-bottom: 5px
      hLine()


    &.state-attention

      .news-article__title
        font-weight: 700

    &.state-disabled

      .news-article__counter
        border-color $gray-lighter


  /*------------------------------------*\
    NEWS ARTICLE TYPE: preview Large
  \*------------------------------------*/
  &.type-preview-L
    padding-top: 10px
    padding-bottom: 10px

    time
      display block
      margin: 10px 0 5px

    .news-article__title
      font-size: 18px
      margin: 0 0 15px


  /*------------------------------------*\
    NEWS ARTICLE TYPE: preview XLarge
  \*------------------------------------*/
  &.type-preview-XL
    position relative
    color $body-bg
    padding: 0

    .news-article__header
      absolute bottom left
      width: 100%;
      padding: 10px

    time
      color: $body-bg;

    .news-article__title
      font-size: 28px
      //remove inheritances from default news-aritcle__header
      margin: 0
      position static
      background none
      padding: 0

    .news-article__tag
      button-variant($body-bg, rgba(81, 81, 91, .4), $body-bg);
      absolute left 10px top 10px

    .news-article__counter
      display inline-block
      vertical-align: middle;
      //remove inheritances from default news-aritcle__header
      position static


  /*------------------------------------*\
    NEWS ARTICLE TYPE: opinion
  \*------------------------------------*/
  &.type-opinion
    @extend .l-island--fence
    padding-top: 10px
    padding-bottom: 10px
    jLine middle

    $author-photo-size = 80px

    .news-article__column-lt
      size $author-photo-size
      position relative
      border-radius 50%
      overflow hidden

      .news-article__photo
        size $author-photo-size


    .news-article__column-rt
      .csscalc &
        width s('calc(100% - %s - 10px)', $author-photo-size)



    .news-article__author
      font-size: 11px

    .news-article__body
      font-weight: 700
      font-size: 16px
      
    
    &.state-disabled
      background-color transparent

      .news-article__tag
        button-variant($gray-lighter, rgba(0,0,0,0), $gray-lighter);

      //mask for image
      .news-article__column-lt
        &:after
          pb(left top)
          size 100%
          background-color: rgba(200,200,200,.75)

      
    &.state-attention
      background-color: #c5cacc

  /*------------------------------------*\
    NEWS ARTICLE TYPE: top commented
  \*------------------------------------*/
  &.type-top-commented
    padding-top: 0
    padding-bottom: 0
    margin-bottom: 20px

    time
      width: 70px


    .news-article__body
      font-weight: 700



  /*------------------------------------*\
    NEWS ARTICLE TYPE: poll
  \*------------------------------------*/
  &.type-poll

    .news-article__body
      @extend .l-island
      margin: 0
      padding-left: 10px
      padding-right: 10px

    .news-article__footer
      jLine bottom
      margin-top: 20px

    li
      margin-bottom: 10px




  /*------------------------------------*\
    NEWS ARTICLE TYPE: template
  \*------------------------------------*/
  &.type-template
    make-xs-column(10)
    make-sm-column(6)
    make-md-column(7)
    padding-top: 15px
    padding-bottom: 15px

    time
      display block
      margin-bottom: 5px

    .news-article__title
      font-size: $font-size-h1
      margin: 0 0 15px

    .news-article__subTitle
      font-size: $font-size-h2
      color: $gray-light;
      margin: 0 0 15px

    .news-article__body
      font-family: $font-family-secondary;

      h2
        line-height: 1.3;

      h3
        margin-top:    20px
        margin-bottom: 10px
        
      a
        color: $brand-primary;

      blockquote
        font-family: $font-family-base;

    figure
      position relative
      margin-bottom: 30px

      img
        size: 100% auto

      figcaption
        position absolute

        .csscalc &
          bottom 10px
          left 10px
          width: calc(100% \- 20px)

        .no-csscalc &
          bottom 0
          left 0
          width: 100%

        display block
        color: $body-bg;
        padding: 5px 10px
        background-color: rgb(0,0,0)
        background-color: rgba(0,0,0, .6)



      small
        absolute left top 100%
        margin-top: 3px
        color $gray-light
        font-size: 10px



    .news-section
      @extend .l-island

      .news-article__title
        font-size: 15px
        font-weight: 700

    .news-section__title
      font-weight: 400;
      font-size: 15px






  /*------------------------------------*\
    NEWS ARTICLE STATE: disabled (base class)
  \*------------------------------------*/
  &.state-disabled
    &,
    &:hover,
    &:focus
      color: $gray-lighter
      background-color: transparent
      cursor default !important

    .news-article__title,
    .news-article__theme,
    .news-article__body
      color: $gray-lighter




/*------------------------------------*\
  NEWS ARTICLE components
\*------------------------------------*/
.news-article__body
  display block
  margin: 5px 0


.news-article__header
  position relative
  color: $body-bg;

  .news-article__title
    absolute left bottom
    width: 100%;
    margin: 0
    padding: 10px 20px
    font-size: 16px
    font-weight: 700
    color: inherit
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.5) 100%);

  .news-article__photo
    size 100% auto

  .news-article__counter
    border @color
    absolute right 10px bottom 10px

  .news-article__tag
    button-variant($body-bg, rgba(81, 81, 91, .4), $body-bg);
    absolute left 10px top 10px


.news-article__counter
  font-family: $font-family-secondary;
  font-size: 10px
  padding: 1px 3px
  margin: 0 5px
  clear both


.news-article__title
  display: block

.news-article__tag
  @extend .btn
  button-variant($text-color, rgba(0,0,0,0), $text-color);
  border-width 1px
  font-weight: normal
  padding-left:  4px
  padding-right: 4px
  text-transform: uppercase;
  display inline-block !important
  font-size: 11px !important;


.news-article__counter
  border $text-color

.news-article__photo
  display block
  @extend .img-responsive
